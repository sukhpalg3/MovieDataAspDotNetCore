@model MovieGuide.Models.Photo

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Model.mName.MovieName
        </dt>
        <dd class = "col-sm-10">
            <img src="~/Movies/@Model.PhotoID@Model.ExtName" />
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PhotoID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="text-white" asp-action="Index">Back</a>
    </form>
</div>
