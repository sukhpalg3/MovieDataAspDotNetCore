@model IEnumerable<MovieGuide.Models.Photo>

@{
    ViewData["Title"] = "Index";
}

<h1>Movie Photos:</h1>

<p>
    <a class="btn btn-dark text-white" asp-action="Create">Add New Cover Photo To Movie</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by Movie Name: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-dark text-whtie" /> |
            <a class="text-white" asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Photo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/Movies/@item.PhotoID@item.ExtName" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mName.MovieName)
            </td>
            <td>
                <a class="btn btn-dark text-white" asp-action="Delete" asp-route-id="@item.PhotoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
